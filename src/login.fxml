<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="LoginController">
   <center>
      <VBox alignment="CENTER">
         <children>
            <VBox alignment="CENTER">
               <children>
                  <Label fx:id="userLabel" alignment="CENTER" text="Username" />
                  <Region />
                  <TextField fx:id="username" maxWidth="200.0" />
               </children>
            </VBox>
            <Region minHeight="40.0" />
            <VBox alignment="CENTER">
               <children>
                  <Label fx:id="passLabel" alignment="CENTER" text="Password" />
                  <Region />
                  <TextField fx:id="password" maxWidth="200.0" />
               </children>
            </VBox>
            <Region prefHeight="30.0" />
            <HBox alignment="TOP_CENTER">
               <children>
                  <Region prefHeight="200.0" prefWidth="200.0" />
                  <Button fx:id="loginButton" mnemonicParsing="false" onAction="#verifyUser" text="Log in" />
                  <Region minWidth="40.0">
                     <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </padding>
                  </Region>
                  <Button fx:id="cancelButton" mnemonicParsing="false" text="Cancel" />
                  <Region prefHeight="200.0" prefWidth="200.0" />
               </children>
            </HBox>
         </children>
      </VBox>
   </center>
   <left>
      <Region BorderPane.alignment="CENTER" />
   </left>
   <right>
      <Region BorderPane.alignment="CENTER" />
   </right>
   <bottom>
      <Region BorderPane.alignment="CENTER" />
   </bottom>
   <top>
      <Region BorderPane.alignment="CENTER" />
   </top>
</BorderPane>
